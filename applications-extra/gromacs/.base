#%Module 1.0 -*- tcl -*-

source $env(KAUST_MODULES_ROOT)/common/setup.tcl

set tmp [split $::version -]
set ::version [lindex $tmp 0]
set ::precision [lindex $tmp 1]

GeneralAppSetup ${version}

AddDeps "acml/6.0.6, boost/1.56.0, fftw/3.3.4/openmpi-1.8.3-gcc-4.9.1-${precision}"

setenv GMXBIN $app_dir/bin
setenv GMXLDLIB $app_dir/lib64
setenv GMXMAN $app_dir/share/man
setenv GMXDATA $app_dir/share/gromacs

prepend-path LD_LIBRARY_PATH $app_dir/lib64
prepend-path PATH            $app_dir/bin
prepend-path MANPATH         $app_dir/share/man
prepend-path CPATH           $app_dir/include
