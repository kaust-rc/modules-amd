#%Module 1.0 -*- tcl -*-

source $env(KAUST_MODULES_ROOT)/common/setup.tcl
GeneralAppSetup 

if ![is-loaded cuda/6.5] {module add cuda/6.5}

if ![is-loaded gcc/4.7.4] {module add gcc/4.7.4}

if ![is-loaded openmpi/1.8.3/gcc-4.7.4] {module add openmpi/1.8.3/gcc-4.7.4}

if ![is-loaded fftw/3.3.4/openmpi-1.8.3-gcc-4.7.4-generic-sp] {module add fftw/3.3.4/openmpi-1.8.3-gcc-4.7.4-generic-sp}

if ![is-loaded kim/1] {module add kim/1}

if ![is-loaded voro/0.4.6] {module add voro/0.4.6}



prereq cuda/6.5 gcc/4.7.4 openmpi/1.8.3/gcc-4.7.4 fftw/3.3.4/openmpi-1.8.3-gcc-4.7.4-generic-sp kim/1 voro/0.4.6


prepend-path PATH $app_dir/bin
