#%Module 1.0 -*- tcl -*-

#  Module for use with 'environment-modules' package:
source [file dirname $::ModulesCurrentModulefile]/../../common/setup.tcl
GeneralLibSetup 

if ![is-loaded openmpi/1.8.3/intel-2015] {
    module add openmpi/1.8.3/intel-2015
}
prereq openmpi/1.8.3/intel-2015

prepend-path PATH $app_dir/lib
prepend-path PATH $app_dir/include
prepend-path CPATH $app_dir/include
prepend-path LD_LIBRARY_PATH $app_dir/lib
prepend-path LIBRARY_PATH $app_dir/lib
prepend-path LD_RUN_PATH $app_dir/lib
